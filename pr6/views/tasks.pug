extends index

block content
  section.add-t
    h2 Add new task
    form#addForm
      label(for="titleInput") Task name: 
      input#titleInput(type="text", name="title")
      button(type="submit") Add
  section.task-list
    if tasks.length
      ul
        each task in tasks
          li
            if task.completed
              span(style="color: green; font-weight: bold") #{task.title}
            else
              span(style="color: red; font-weight: bold") #{task.title}
    else
      p No tasks
 